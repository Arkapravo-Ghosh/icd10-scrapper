{
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "*.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "archive",
    "*.zip",
    "*.py",
    "__pycache__",
    "**/*.spec.ts",
  ],
}